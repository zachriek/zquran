<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.GetStartedActivity"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/get_started_img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/anm_quran" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/AppHeading"
            android:id="@+id/get_started_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_started_title"
            android:textAlignment="center"
            android:layout_marginTop="20dp" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/AppBodyText"
            android:id="@+id/get_started_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_started_desc"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/get_started_button"
            style="@style/Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_started_text"
            android:drawableRight="@drawable/ic_keyboard_arrow_right"
            android:drawableTint="@color/white"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</ScrollView>